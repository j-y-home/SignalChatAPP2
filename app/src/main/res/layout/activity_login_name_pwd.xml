<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_common_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/top_back_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="用户名密码登录"
                android:textColor="@color/common_top_title"
                android:textSize="22sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_login_via_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="用户名"
                    android:textColor="#353535"
                    android:textSize="@dimen/common_item_text_size" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dp"
                    android:hint="请输入用户名"
                    android:background="@null"
                    android:textColorHint="@color/wechat_btn_green"
                    android:textSize="@dimen/common_item_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="phone"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="@color/common_hint_grey"
                    android:textSize="@dimen/common_item_text_size" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/et_pwd"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="密码"
                    android:textColor="#353535"
                    android:textSize="@dimen/common_item_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_grey" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_via_wechat_id_email_qq_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请填写微信号/QQ号/邮箱"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="@color/common_hint_grey"
                    android:textSize="@dimen/common_item_text_size" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/et_account"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/account"
                    android:textColor="#353535"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请填写密码"
                    android:inputType="textPassword"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="@color/common_hint_grey"
                    android:textSize="@dimen/common_item_text_size" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/et_password"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/password"
                    android:textColor="#353535"
                    android:textSize="@dimen/common_item_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_grey" />
            </RelativeLayout>
        </LinearLayout>



        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="40dp"
            android:background="@drawable/border_btn_add_blue_fill"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="登     录"
            android:textColor="@color/white"
            android:textSize="@dimen/common_item_text_size" />
    </LinearLayout>
</LinearLayout>